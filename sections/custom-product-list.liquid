<div class="custom-two-product">
  {% if section.settings.product_1 != blank %}
    {% assign product1 = all_products[section.settings.product_1] %}
    <div class="product">
      <img src="{{ product1.featured_image.src | img_url: 'medium' }}" alt="{{ product1.title }}" class="product-image">
      <h2>{{ product1.title }}</h2>
      <p>{{ product1.description }}</p>
      <p>Price: {{ product1.price | money }}</p>
      <form action="/cart/add" method="post" class="product-form" data-product-id="{{ product1.variants.first.id }}">
        <input type="hidden" name="id" value="{{ product1.variants.first.id }}">
        <button type="button" class="btn add-to-cart">Add to Cart</button>
      </form>
      <form action="/cart/change" method="post" class="product-form" data-product-id="{{ product1.variants.first.id }}">
        <input type="hidden" name="id" value="{{ product1.variants.first.id }}">
        <input type="hidden" name="quantity" value="0">
        <button type="button" class="btn btn-remove">Remove from Cart</button>
      </form>
    </div>
  {% endif %}
  
  {% if section.settings.product_2 != blank %}
    {% assign product2 = all_products[section.settings.product_2] %}
    <div class="product">
      <img src="{{ product2.featured_image.src | img_url: 'medium' }}" alt="{{ product2.title }}" class="product-image">
      <h2>{{ product2.title }}</h2>
      <p>{{ product2.description }}</p>
      <p>Price: {{ product2.price | money }}</p>
      <form action="/cart/add" method="post" class="product-form" data-product-id="{{ product2.variants.first.id }}">
        <input type="hidden" name="id" value="{{ product2.variants.first.id }}">
        <button type="button" class="btn add-to-cart">Add to Cart</button>
      </form>
      <form action="/cart/change" method="post" class="product-form" data-product-id="{{ product2.variants.first.id }}">
        <input type="hidden" name="id" value="{{ product2.variants.first.id }}">
        <input type="hidden" name="quantity" value="0">
        <button type="button" class="btn btn-remove">Remove from Cart</button>
      </form>
    </div>
  {% endif %}
</div>



{% schema %}
{
  "name": "Product Section",
  "settings": [
    {
      "type": "product",
      "label": "Product 1",
      "id": "product_1"
    },
    {
      "type": "product",
      "label": "Product 2",
      "id": "product_2"
    }
  ],
  "presets": [
    {
      "name": "Two-Produc",
      "category": "Custom"
    }
  ]
}
{% endschema %}
